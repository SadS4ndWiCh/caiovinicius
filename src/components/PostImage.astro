---
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
    class?: string;
}
---

<figure class:list={["w-fit h-fit p-1 rounded-2xl bg-white border border-zinc-200 shadow-sm", Astro.props.class]}>
    <Image
        src={Astro.props.src}
        alt={Astro.props.alt}
        width="100"
        height="100"
        loading="eager"
        class="rounded-xl"
    />
</figure>