---
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";

import { siteConfig } from "../config/site";
---

<html lang="en">
    <head>
        <Head title={siteConfig.name} description={siteConfig.description} />
    </head>
    <body class="flex flex-col gap-6 max-w-3xl mx-auto p-4 text-foreground bg-background font-sans antialiased">
        <main class="flex-1">
            <slot />
        </main>

        <Footer />
    </body>
</html>