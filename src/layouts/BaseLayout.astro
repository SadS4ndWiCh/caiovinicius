---
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";

import { siteConfig } from "../config/site";
---

<html lang="en">
	<head>
		<Head title={siteConfig.name} description={siteConfig.description} />
	</head>
	<body
		class="mx-auto flex max-w-3xl flex-col gap-6 bg-background p-4 font-sans text-foreground antialiased"
	>
		<main class="flex-1">
			<slot />
		</main>

		<Footer />
	</body>
</html>
