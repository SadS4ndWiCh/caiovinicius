---
import { ViewTransitions } from "astro:transitions";
import Alert from "~/components/common/Alert.astro";
import Footer from "~/components/common/Footer.astro";
import Header from "~/components/common/Header.astro";

interface Props {
  title?: string;
}

const title = Astro.props.title
  ? Astro.props.title.concat(" - Caio Vinícius")
  : "Caio Vinícius";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <ViewTransitions />
</head>
<body class="antialiased">
  <Alert>This website is currently under development.</Alert>

  <Header />
  <slot />
  <Footer />
</body>
</html>

<style is:global>
  @font-face {
    font-family: Inter;
    src: url(/public/fonts/inter.ttf) format(truetype);
    font-display: swap;
  }

  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>