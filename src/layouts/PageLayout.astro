---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const title = Astro.props.title
  ? Astro.props.title.concat(" - Caio Vinícius")
  : "Caio Vinícius";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <ViewTransitions />
</head>
<body class="max-w-[605px] mx-auto py-16 antialiased text-zinc-900">
  <slot />
</body>
</html>

<style is:global>
  @font-face {
    font-family: Inter;
    src: url(/public/fonts/inter.ttf) format(truetype);
    font-display: swap;
  }

  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>